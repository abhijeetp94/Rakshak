<AnchorPane fx:id="primaryPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.StaffDashboardController">
    <children>
        <HBox prefHeight="23.0" prefWidth="800.0">
            <children>
                <ToolBar prefHeight="36.0" prefWidth="519.0">
